html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
    body
        div(style='background: #f5f5f5;display: table;margin: auto;max-width: 100%; box-sizing: border-box;')
            div(style='background: white;margin: 0;margin:20px; padding: 20px; width: 380px; max-width: 100%;')
                img(style='max-width: 130px;' src='https://testing-platinum-rail-services.s3.ap-south-1.amazonaws.com/full_logo-1582290758800.png')
                p(style="font-family:'Sf UI';") Hello you have been assigned to a #{title}. Below are the job details
                div(style="font-family: 'Segoe UI';")
                    h4(style='margin-bottom: 2px;')
                        b Job Details
                    h5(style='margin: 5px 0px; font-weight: 500;')
                        | Title :   
                        span(style='color:#d9a34a; font-size: 12px;') #{title}
                    h5(style='margin: 5px 0px; font-weight: 500;')
                        | Location: 
                        span(style='color:#d9a34a; font-size: 12px;') #{location.title}
                div(style="font-family: 'Segoe UI';")
                    h4(style='margin-bottom: 2px;')
                        b Instructor Details

                        each instructor in instructors

                            h5(style='margin: 5px 0px; font-weight: 500;')
                                | Name :   
                            span(style='color:#d9a34a; font-size: 12px;')  #{instructor.name}
                            h5(style='margin: 5px 0px; font-weight: 500;')
                                |Email: 
                            span(style='color:#d9a34a; font-size: 12px;')
                                a(href='#{instructor.email}')
                                | #{instructor.email}
                div(style="font-family: 'Segoe UI';")
                    h4(style='margin-bottom: 2px;')
                        b Course Details
                    h5(style='margin: 5px 0px; font-weight: 500;')
                        | Title :   
                        span(style='color:#d9a34a; font-size: 12px;') #{course.title}
                    h5(style='margin: 5px 0px; font-weight: 500;')
                        | Duration: 
                        span(style='color:#d9a34a; font-size: 12px;') #{course.duration}
                div(style="font-family: 'Segoe UI';")
                    h4(style='margin-bottom: 2px;')
                        b Time Frequency
                    h5(style='margin: 5px 0px; font-weight: 500;')
                        | Start Date :   
                        span(style='color:#d9a34a; font-size: 12px;') #{prettyDate(startingDate)} with every #{totalDays} 
            div(style="text-align:center; font-family: 'Segoe UI';")
                p(style='font-size: 12px;')
                    | Copyright 
                    span Â©
                    | 2018 
                    b Platinum Rail Services. All Rights Reserved.
                p(style='font-size: 12px;') info@platinumrailservices.co.uk | 01133506353

-function prettyDate(dateString){
    -var date = new Date(dateString);
    -var d = date.getDate();
    -var monthNames = [ "Jan", "Feb", "Mar", "Apr", "May", "Jun","Jul", "Aug", "Sep", "Oct", "Nov", "Dec" ];
    -var m = monthNames[date.getMonth()];
    -var y = date.getFullYear();
    -return d+' '+m+' '+y;
-}





